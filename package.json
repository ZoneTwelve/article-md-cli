{
  "name": "article_md",
  "version": "0.1",
  "author": "Thang Pham <phamducthang1234@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@mozilla/readability": "^0.4.1",
    "axios": "^0.21.1",
    "jsdom": "^16.5.3",
    "turndown": "^7.0.0",
    "yargs": "^17.0.1"
  },
  "files": ["dist"],
  "bin": {
    "article_md": "./dist/index.js"
  },
  "lint-staged": {
    "*.{json}": ["yarn prettier --write"],
    "*.{js,ts}": ["yarn prettier --write", "yarn eslint --fix"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "test:init": "yarn build && yarn link && chmod +x ./dist/index.js",
    "test:run": "yarn build && article_md",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fixAll": "yarn lint --fix",
    "format": " yarn prettier \"**/*.{js,ts,json}\" --write --ignore-path .gitignore"
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.10",
    "@types/node": "^15.6.0",
    "@types/turndown": "^5.0.0",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.3",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  }
}
